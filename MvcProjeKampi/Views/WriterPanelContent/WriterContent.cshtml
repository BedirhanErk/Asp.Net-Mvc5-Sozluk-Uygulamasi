@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "WriterContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<html>
<body class="hold-transition sidebar-mini">
    <br />
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="timeline">
                            @foreach (var item in Model)
                            {
                                <div class="time-label">
                                    <span class="bg-success">@item.ContentDate.ToString("dd/MMM/yyyy")</span>
                                </div>
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><a href="/Writer/Index">@item.Writer.WriterName @item.Writer.WriterSurname (@item.Heading.HeadingName)</a></h3>
                                        <div class="timeline-body">
                                            @item.ContentValue
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
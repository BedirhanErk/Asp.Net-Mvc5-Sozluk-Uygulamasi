@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>
    Adminler
    <a href="/Authorization/AddAdmin" style="margin-left:25px"><i class="fas fa-plus"></i> Ekle</a>
</h2>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>Admin Adı</th>
        <th>Durum</th>
        <th>Yetki</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdminName</td>
            <td>
                @if (item.AdminStatus == true)
                {
                    <p style="color:green">Aktif</p>
                }
                else
                {
                    <p style="color:red">Pasif</p>
                }
            </td>
            <td>@item.AdminRole</td>
            <td><a href="/Authorization/UpdateAdmin/@item.AdminId" class="btn btn-warning btn-sm">Güncelle</a></td>
            @if (item.AdminStatus == true)
            {
                <td><a class="btn btn-danger btn-sm" href="/Authorization/DeleteAdmin/@item.AdminId"><i class="fas fa-times-circle"></i> Pasif Yap</a></td>
            }
            else
            {
                <td><a class="btn btn-success btn-sm" href="/Authorization/DeleteAdmin/@item.AdminId"><i class="fas fa-check"></i> Aktif Yap</a></td>
            }
        </tr>
    }
</table>
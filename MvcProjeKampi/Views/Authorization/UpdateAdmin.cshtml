@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Admin Güncelleme</h3>
<br />
@using (Html.BeginForm("UpdateAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AdminId)
        @Html.HiddenFor(x => x.AdminPasswordHash)
        @Html.HiddenFor(x => x.AdminPasswordSalt)
        @Html.HiddenFor(x => x.AdminUserName)
        @Html.HiddenFor(x => x.AdminStatus)
        @Html.Label("Admin Adı")
        @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Rolü")
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
        <br />
        <button class="btn btn-secondary"><i class="fas fa-pencil-alt"></i> Güncelle</button>
        <a href="/Authorization/Index" class="btn btn-warning"><i class="fas fa-backward"></i> Geri Dön</a>
    </div>
}



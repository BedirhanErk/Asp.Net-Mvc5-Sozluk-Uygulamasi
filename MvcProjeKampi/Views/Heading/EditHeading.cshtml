@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Başlık Güncelleme</h1>
<br />
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HeadingId)

        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />

        @Html.HiddenFor(x => x.HeadingDate, new { @class = "form-control" })
        @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
        @Html.HiddenFor(x => x.HeadingStatus, new { @class = "form-control" })

        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>
}
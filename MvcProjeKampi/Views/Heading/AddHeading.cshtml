@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Yeni Başlık Ekle</h3>
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @style = "color:red" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>) ViewBag.vlc, new { @class="form-control"})
        <br />
        @Html.Label("Yazar")
        @Html.DropDownListFor(x=>x.WriterId, (List<SelectListItem>)ViewBag.vwr, new { @class="form-control"})
        <br />
        <button class="btn btn-primary"><i class="fas fa-plus"></i> Ekle</button>
        <a href="/Heading/Index" class="btn btn-warning"><i class="fas fa-backward"></i> Geri Dön</a>
    </div>
}

@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>
    Yazarlar
    <a href="/Writer/AddWriter" style="margin-left:25px;position:absolute;right:10px"><i class="fas fa-plus"></i> Ekle</a>
</h3>
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini"> 
    <section class="content">
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var writer in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @writer.WriterTitle
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@writer.WriterName @writer.WriterSurname</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında: </b> @writer.WriterAbout</p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @writer.WriterMail</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            @if (writer.WriterImage == null)
                                            {
                                            <img class="img-circle img-fluid" src="~/Themes/Images/user.png" />
                                            }
                                            else
                                            {
                                                <img src="@writer.WriterImage" alt="" class="img-circle img-fluid">
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/Heading/Index" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments"></i> Yazarın Başlıkları
                                        </a>
                                        <a href="/Writer/EditWriter/@writer.WriterId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profile Git
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>
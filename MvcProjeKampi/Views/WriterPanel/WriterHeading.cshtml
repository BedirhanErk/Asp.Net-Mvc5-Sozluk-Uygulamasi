@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "WriterHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{ string color = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <br />
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlıklarım</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 25%">
                                Başlık Adı
                            </th>
                            <th style="width: 25%">
                                Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Eğitim")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Film")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Category.CategoryName == "Kitap")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-danger";
                            }
                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.HeadingDate.ToString("dd/MMM/yyyy")
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>                             
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Default/Headings/@item.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/WriterPanel/Delete/@item.HeadingId">
                                        <i class="fas fa-times-circle">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
<a href="/WriterPanel/NewHeading" class="btn btn-primary">Ekle</a>
